<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#40000000"/>
                    <corners android:radius="7dp"/>
                </shape>
            </item>
            <item
                android:bottom="3px"
                android:top="1px"
                android:right="2px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/cl_primary_focused"/>
                    <corners
                        android:radius="7dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item  android:state_focused="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#40000000"/>
                    <corners android:radius="7dp"/>
                </shape>
            </item>
            <item
                android:bottom="3px"
                android:top="1px"
                android:right="2px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/cl_primary_light"/>
                    <corners
                        android:radius="7dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>